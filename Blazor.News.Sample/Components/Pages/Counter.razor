@page "/counter"
@using UL.UI.Components.Components
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>
<BootstrapToast @ref="toast" PositionHorizontal="center" PositionVertical="top" />
<button type="button" class="btn btn-primary" @onclick="ShowToast">Toon Toast</button>


<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private BootstrapToast toast;
    private void IncrementCount()
    {
        currentCount++;
    }
    private async Task ShowToast()
    {
        if (toast != null)
        {
            await toast.Show("Succes!", "Je actie is geslaagd.", "success");
        }
    }
}
