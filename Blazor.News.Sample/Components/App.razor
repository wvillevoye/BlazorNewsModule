@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.x.x/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="Blazor.News.Sample.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />

   @if(quillEditorEnabled){
        @*Als je Quilleditor wilt gebruiken  !  *@
        <link href="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.snow.css" rel="stylesheet" />
   }
    <HeadOutlet @rendermode="@InteractiveServer" />
</head>

<body>
    <Routes @rendermode="@InteractiveServer" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
   
    @if (quillEditorEnabled)
    {
        @*Als je Quilleditor wilt gebruiken  !  *@
        <script src="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.js"></script>
        <script src="_content/Blazor.Shared.Editors/JS/quill-blazor-interop.js"></script>
    }
    if(tinyMceEditorEnabled){
        @*Als je TinyMCEeditor wilt gebruiken  !   wel effe gratis een Apikey Aanmaken https://www.tiny.cloud/pricing/ *@
        <script src="https://cdn.tiny.cloud/1/b27yqg5y7edfx6r5nypuj5oxa3vkw81phe31eluv9647z5pi/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="_content/Blazor.Shared.Editors/JS/tinymce-blazor-interop.js"></script>
    }
    
    
    <script src="_content/Blazor.News/JS/Custom.js"></script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>
@code{

    private bool tinyMceEditorEnabled = false;
    private bool quillEditorEnabled = true;

    protected override void  OnInitialized()
    {
        tinyMceEditorEnabled = Configuration.GetValue<bool>("Editors:TinyMceEditorEnabled");
        quillEditorEnabled = Configuration.GetValue<bool>("Editors:QuillEditorEnabled");
         
    }
}