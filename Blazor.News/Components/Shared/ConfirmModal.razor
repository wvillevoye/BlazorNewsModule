@inherits LayoutComponentBase

@if (Show)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close" aria-label="Sluiten"></button>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Cancel">Annuleren</button>
                    <button class="btn btn-danger" @onclick="Confirm">Verwijderen</button>
                </div>
            </div>
        </div>
    </div>
}
@code {
    [Parameter] public string Title { get; set; } = "Bevestigen";
    [Parameter] public string Message { get; set; } = "Weet je het zeker?";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync();
        await OnClose.InvokeAsync();
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
        await OnClose.InvokeAsync();
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}